
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin';
      allow create: if request.auth.uid == userId;
      // Allow user to update their own profile, especially the onboarding part
      allow update: if request.auth.uid == userId && 
                             (request.resource.data.diff(resource.data).affectedKeys()
                             .hasOnly(['onboarding']));
    }

    match /onboarding/{collection}/{docId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    match /recommendations/{recommendationId} {
        allow read: if request.auth != null;
        allow create: if true;
        allow update, delete: if false;
    }
    
    match /ds_backlog/{taskId} {
        allow read: if request.auth != null;
        allow write: if getUserRole(request.auth.uid) in ['core', 'admin'];
    }

    match /kits/{kitId} {
        allow get: if request.auth != null && getUserRole(request.auth.uid) in ['producer', 'core', 'admin'];
    }

    // --- AI Toolkit Collections ---

    match /agents/{agentId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
    }

    match /agents/{agentId}/runs/{runId} {
      allow read, create: if request.auth != null; // Simplified for now
      allow update: if request.auth.uid == resource.data.createdBy;
    }

    match /datasets/{datasetId} {
      allow read, create, update: if request.auth != null; // Simplified for now
    }
    
    match /insights/{insightId} {
       allow read, create, update: if request.auth != null; // Simplified for now
    }

    match /experiments/{expId} {
      allow read, create, update: if request.auth != null; // Simplified for now
    }
  }
}
